<h2>Make a New Post:</h2>
<ul>
<%= form_for @post do |f| %>
  <li><%= f.label :title %>
  <%= f.text_field :title %></li>

  <li><%= f.label :post %></br>
  <%= f.text_area :post_body, :cols => "50", :rows => "10"  %></li>

  <li><%= f.label :tags %>
  <%= f.text_field :tag %></li>

  <li><%= f.submit "Create" %></li>
<% end %>
</ul>
