<h2>Edit Post</h2>
<%= form_for @post do |f| %>
  <div><%= f.label :title %>
  <%= f.text_field :title %></div>

  <div><%= f.label :post %></div>
  <div><%= f.text_area :post_body, :cols => "24", :rows => "4"  %></div>

  <div><%= f.label :tags %>
  <%= f.text_field :tag %></div>

  <li><%= f.submit "Edit" %></li>
<% end %>
