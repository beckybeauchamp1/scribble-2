<div id="back" class="emphasis"><%= link_to "Back to Post", post_path %></div>

<h2>Edit Post</h2>
<%= form_for @post do |f| %>
  <div><%= f.label :title %>
  <%= f.text_field :title %></div>
  </br>
  <div><%= f.label :post %></div>
  <div><%= f.text_area :post_body, :cols => "24", :rows => "4"  %></div>

  <div><%= f.label :tags %>
  <%= f.text_field :tag %></div>

  <div><%= f.submit "Edit" %></div>
<% end %>
