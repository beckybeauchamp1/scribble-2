<h2><%= @post.title %></h2>

<ul>
  <li>Updated At: <%= @post.updated_at %></li>
  <li><%= @post.post_body %></li>
  <li>Tags: <%= @post.tag %>  </li>
</ul>

<%= link_to "Edit Post", edit_post_path( @post ) %> |
<%= link_to "Back to Posts", posts_path %>


  <h3>Comments <%= link_to "(+)", new_post_comment_url( @post ) %></h3>
    <ul>
      <% @post.comments.each do |comment| %>
        <li>
          <%= comment.updated_at %> </br>
          <%= comment.comment_body %> | <%= link_to "Edit Comment", edit_post_comment_url( @post, comment ) %>
        </li>
      <% end %>
    </ul>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete Post!", class: "delete" %>
<% end %>

