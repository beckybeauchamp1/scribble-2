
<div id="back" class="emphasis"><%= link_to "Back to Posts", posts_path %></div>

<h2><%= @post.title %></h2>
  <div><span class="emphasis">Updated At: </span><%= @post.updated_at %></div>
  <div><%= @post.post_body %></div>
  <div><span class="emphasis">Tags: </span><%= @post.tag %>  </div>
<button class="makeButton"><%= link_to "Edit Post", edit_post_path( @post ) %></button>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit "Delete Entire Post!", class: "delete" %>
<% end %>

  <h3>Comments <%= link_to "(+)", new_post_comment_url( @post ) %></h3>

      <% @post.comments.each do |comment| %>
        <div><span class="emphasis">Updated At: </span><%= comment.updated_at %></div>
          <div><%= comment.comment_body %></div>
          <div><button class="makeButton"><%= link_to "Edit Comment", edit_post_comment_url( @post, comment ) %></button></div>
          <div><%= form_for [@post, comment], method: :delete do |f| %>
            <%= f.submit "Delete Comment!", class: "delete" %>
          <% end %></div>
      <% end %>


