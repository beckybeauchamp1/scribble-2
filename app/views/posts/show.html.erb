<h2><%= @post.title %></h2>
<ul>
  <li>Updated At: <%= @post.updated_at %></li>
  <li><%= @post.post_body %></li>
  <li>Tags: <%= @post.tag %>  </li>
</ul>


  <h3>Comments <%= link_to "(+)", new_post_comment_url( @post ) %></h3>
    <ul>
      <% @post.comments.each do |comment| %>
        <li>
          <%= comment.updated_at %> </br>
          <%= comment.comment_body %>
        </li>
      <% end %>
    </ul>
